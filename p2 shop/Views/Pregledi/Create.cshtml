@model p2_shop.Models.Pregledi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-10">
        <h2>Kreiraj novi pregled</h2>
        
        <h4>Pregledi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ocjena, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ocjena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ocjena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Komentar, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Komentar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Komentar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FK_Proizvod_ID, "FK_Proizvod_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FK_Proizvod_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_Proizvod_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj novi pregled" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            @{string putanja_id = "";
                if (HttpContext.Current.Request.Url.AbsoluteUri.Contains("/Pregledi/Create/"))
                {
                    putanja_id = HttpContext.Current.Request.Url.AbsoluteUri.Substring(HttpContext.Current.Request.Url.AbsoluteUri.LastIndexOf("/") + 1);
                }
            }
            @if (putanja_id == "0")
            {
                @Html.ActionLink("Nazad na listu", "Index")
            }
            else
            {
                @Html.ActionLink("Nazad na detalje", "Details", "Shoping", new { id = putanja_id }, null)
            }
        </div>
    </div>
</div>
