            @Html.LabelFor(model => model.Naziv_grupe_tipa_proizvoda, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-offset-1 col-md-9">
                @Html.EditorFor(model => model.Naziv_grupe_tipa_proizvoda, new { htmlAttributes = new { @class = "form-control" } })
