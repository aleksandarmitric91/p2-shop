@model p2_shop.Models.Tip_Proizvoda

@{
    ViewBag.Title = "Delete";
}

<div class="container col-md-10">
    <div class="row">
        <div class="col-md-10">
            <h2>Brisanje</h2>

            <h3>Da li ste sigurni da želite obrisati ovaj tip proizvoda?</h3>
        </div>
    </div>

    <div class="row">

        <div class="col-md-10">
            <h4>Tip Proizvoda</h4>
            <hr />
            <dl class="dl-horizontal col-md-10">
                <dt>
                    @Html.DisplayNameFor(model => model.Naziv_Tipa)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Naziv_Tipa)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Grupa_tipa_proizvoda.Naziv_grupe_tipa_proizvoda)
