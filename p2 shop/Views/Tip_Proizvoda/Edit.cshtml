@model p2_shop.Models.Tip_Proizvoda

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-10">
        <h2>Uređivanje</h2>

        <h4>Tip Proizvoda</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Tip_Proizvoda_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Naziv_Tipa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naziv_Tipa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naziv_Tipa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FK_Grupa_tipa_proizvoda, "FK_Grupa_tipa_proizvoda", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="container">
                <div class="row">
                    <div class="col-lg-offset-1 col-md-7">
                        @Html.DropDownList("FK_Grupa_tipa_proizvoda", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FK_Grupa_tipa_proizvoda, "", new { @class = "text-danger" })
                        @Html.ActionLink("Dodaj novu grupu tipa proizvoda", "Create", "Grupa_tipa_proizvoda")
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Nazad na listu", "Index")
        </div>
    </div>
}