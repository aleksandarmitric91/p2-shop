@model p2_shop.Models.Pregledi

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-10">
    <div class="row">
        <div class="col-md-10">
            <h2>Brisanje</h2>

            <h3>Da li ste sigurni da želite obrisati ovaj pregled?</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <h4>Pregledi</h4>
            <hr />
            <dl class="dl-horizontal col-md-10">
                <dt>
                    @Html.DisplayNameFor(model => model.Pregledac)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pregledac)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ocjena)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ocjena)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Komentar)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Komentar)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Datum_ocjenjivanja)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Datum_ocjenjivanja)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Proizvodi.Naziv)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Proizvodi.Naziv)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10">
                                <input type="submit" value="Obriši" class="btn btn-default" />
                            </div>
                            <div class="col-md-10">
                                @Html.ActionLink("Nazad na listu", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>