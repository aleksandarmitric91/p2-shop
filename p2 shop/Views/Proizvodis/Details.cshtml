@model p2_shop.Models.Proizvodi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-10">
    <div class="row">
        <div class="col-md-10">
            <h2>Detalji</h2>

            <h4>Proizvod</h4>
        </div>
    </div>

    <div class="row">
        <hr />
        <dl class="dl-horizontal col-md-10">
            <dt>
                @Html.DisplayNameFor(model => model.Naziv)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Naziv)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cijena)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cijena)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Opis)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Opis)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Naziv_Slike)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Naziv_Slike)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Active)
            </dt>

            <dd>
                @{
                    string odgovor;
                    if (this.Model.Active == true)
                    {
                        odgovor = "Da";
                    }
                    else
                    {
                        odgovor = "Ne";
                    }
                }
                @odgovor
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Istaknuti)
            </dt>

            <dd>
                @{
                    if (this.Model.Istaknuti == true)
                    {
                        odgovor = "Da";
                    }
                    else
                    {
                        odgovor = "Ne";
                    }
                }
                @odgovor
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Akcija)
            </dt>

            <dd>
                @{
                    if (this.Model.Akcija == true)
                    {
                        odgovor = "Da";
                    }
                    else
                    {
                        odgovor = "Ne";
                    }
                }
                @odgovor
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tip_Proizvoda.Naziv_Tipa)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tip_Proizvoda.Naziv_Tipa)
            </dd>

        </dl>
    </div>

    <p>
        @Html.ActionLink("Uredi", "Edit", new { id = Model.Proizvod_ID }) |
        @Html.ActionLink("Nazad na listu", "Index")
    </p>
</div>
